// https://pris.ly/cli/accelerate-init

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
}

model User {
  id           String    @id @default(cuid())
  fullName     String
  rut          String    @unique
  username     String    @unique
  email        String    @unique
  passwordHash String
  bikeNumber   String    @unique
  role         String    @default("USER")
  createdAt    DateTime  @default(now())
  updatedAt    DateTime  @updatedAt
  assignedSlot BikeSlot? @relation("SlotOccupant")
}

model BikeSlot {
  id         Int      @id @default(autoincrement())
  label      String   @unique
  occupied   Boolean  @default(false)
  occupantId String?  @unique
  occupant   User?    @relation("SlotOccupant", fields: [occupantId], references: [id])
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt
}
